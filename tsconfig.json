{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "es2015"
        ],
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
         
    },
    "exclude": [
        "node_modules",
        "public/bower_components"
      
    ]
}